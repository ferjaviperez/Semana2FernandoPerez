<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana2FernandoPerez.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="22" CornerRadius="0">
                <Label Text="CALIFICACIONES UNIVERSIDAD ISRAEL" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
            </Frame>



            <Entry x:Name="txtUser" Placeholder="Ingrese el Usuario: "/>
            <Entry x:Name="txtPass" Placeholder="Ingrese la Clave: " IsPassword="True"/>

            <Button x:Name="btnAbrir"  
                Text="Ingresar"  
                Clicked="btnAbrir_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>